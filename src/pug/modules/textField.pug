- var tfLabel = 'Text field'

form.mr20
	h3
		.container
			label(for='text-field') #{tfLabel}
			label.text-color50(for='default') Default
	input.text-field(type='email' placeholder='Email' name='email')
form.mr20
	h3 
		.container 
			label(for="focus") #{tfLabel}
			label.text-color50(for="hover") hover/focus 
	input.text-field(type="text" placeholder="This is pretty awesome" id="focus")